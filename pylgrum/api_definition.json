{
    "openapi":"3.0.2",
    "info": {
        "title":"PyLGRum",
        "version":"1.0"
    },
    "servers": [
        {"url":"https://api.server.test/v1"}
    ],
    "components": {
        "schemas": {
            "Player": {
                "type":"object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },
            "Card": {
                "type": "object",
                "properties": {
                    "suit": {
                        "type": "string"
                    },
                    "card": {
                        "type": "string"
                    }
                }
            },
            "PublicMove": {
                "type": "object",
                "properties": {
                    "game_id": { "type": "integer" },
                    "move_id": { "type": "integer" },
                    "player_id": { "type": "integer" },
                    "card_from": { "type": "string" },
                    "card_discarded": { "type": "string" }
                }
            },
            "Game": {
                "type": "object",
                "properties": {
                    "game_id": { "type": "integer"},
                    "description": { "type": "string"}
                }
            }
        }
    },
    "paths": {
        "/players": {
            "get": {
                "description": "List available players.",
                "responses": {
                    "200": {
                        "description": "list of available players",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Player"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/players/{player_name}": {
            "post": {
                "description": "Register player with server.",
                "responses": {
                    "200": {
                        "description": "player accepted, player ID returned",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "$ref": "#/components/schemas/Player"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/players/{player_id}/challenge": {
            "post": {
                "description": "Start a game.",
                "responses": {
                    "200": {
                        "description": "Game started",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "$ref": "#/components/schemas/Game"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}