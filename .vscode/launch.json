    "version": "0.2.0",
    "configurations": [
        {
            "name": "connexion",
            "type": "python",
            "request": "launch",
            "module": "connexion",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "run",
                "${workspaceFolder}/openapi/openapi.yaml",
                "--port",
                "8080"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "pylgrum/pylgrum_server.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "pytest all",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${fileDirname}"
        },
        {
            "name": "pytest current",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${fileDirname}",
            "args": [
                "${file}"
            ]
        },
    ]
}